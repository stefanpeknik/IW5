@page "/quiz/{id:guid}"
@inherits PageBase

@if (Data is not null)
{
    <div class="flex flex-col items-center h-screen">
        <h2 class="self-start m-5 basis-1/3">Quiz ></h2>
        <h1 class="font-bold text-3xl">@Data.Title</h1>
        <h2 class="text-xl">Created by: @Data.CreatorName</h2>
        @if (Data.Questions.Count == 0)
        {
            <h3>No questions</h3>
        }
        @if (Data.Questions.Count == 1)
        {
            <h3>1 question</h3>
        }
        @if (Data.Questions.Count > 1)
        {
            <h3>@Data.Questions.Count questions</h3>
        }
        <h3 class="font-bold text-2xl">Questions</h3>
        @foreach(var question in Data.Questions)
        {
            <div class="flex flex-col items-center">
                <h2 class="text-xl">@question.Text</h2>
            </div>
        }
        <h3 class="font-bold text-2xl">Results</h3>
        @foreach (var result in Data.Scores)
        {
            <h2 class="text-xl">@result.UserName: @result.Score</h2>
        }


    </div>
}
