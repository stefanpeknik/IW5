@namespace TaHook.Web.App

<button @onclick="@OnClickEvent" class="@ButtonClasses">
    @if (Icon is not null)
    {
        <i class="@Icon"></i>
    }
    @Text
</button>

@code {
    [Parameter]
    public string? Text { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnClickEvent { get; set; }

    // 0 - normal, 1 - success, 2 - warning, 3 - danger
    [Parameter]
    public int Variant { get; set; } = 0;

    [Parameter]
    public string? Icon { get; set; }

    private string ButtonClasses
    {
        get
        {
            string baseClasses = "text-white font-bold py-2 px-4 border-b-4 rounded font-nunito ";
            
            switch (Variant)
            {
                case 1:
                    return baseClasses + "bg-green-500 hover:bg-green-400 border-green-700 hover:border-green-500";
                case 2:
                    return baseClasses + "bg-yellow-500 hover:bg-yellow-400 border-yellow-700 hover:border-yellow-500";
                case 3:
                    return baseClasses + "bg-red-500 hover:bg-red-400 border-red-700 hover:border-red-500";
                default:
                    return baseClasses + "bg-blue-500 hover:bg-blue-400 border-blue-700 hover:border-blue-500";
            }
        }
    }
}